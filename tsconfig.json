{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": [ "es2018" ],
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "outDir": "dist"
  },
  "include": [ "src/index.ts" ]
}
